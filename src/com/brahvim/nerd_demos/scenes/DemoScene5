package com.brahvim.nerd_tests.scenes;

import com.brahvim.nerd.scene_api.NerdScene;
import com.brahvim.nerd.scene_api.SceneState;

import processing.core.PApplet;

public class DemoScene5 extends NerdScene {

	private final String TEXT = String.format(
			"Welcome to `%s`!",
			this.getClass().getSimpleName());

	@Override
	protected void setup(SceneState p_state) {
		System.out.println(this.TEXT);
		GRAPHICS.currentCamera.pos.z = 500;
	}

	@Override
	protected void draw() {
		GRAPHICS.background(0x006699, PApplet.sin(super.getMillisSinceStart()));
		GRAPHICS.fill(233);

		GRAPHICS.pushMatrix();
		GRAPHICS.scale(2);
		GRAPHICS.text(this.TEXT, 0, 0);
		GRAPHICS.popMatrix();

		GRAPHICS.circle(GRAPHICS.mouseX - WINDOW.cx, GRAPHICS.mouseY - WINDOW.cy, 20);
	}

	@Override
	public void mouseClicked() {
		MANAGER.startScene(DemoScene4.class);
	}

}
